{
  "version": "1.0.0",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "lib": [
      "es6"
    ],
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "declaration": true,
  },
  "exclude": [
    "build",
    "node_modules"
  ]
}